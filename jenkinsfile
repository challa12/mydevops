pipeline{
  agent any
  tools {
      git 'git'
      maven 'maven'
}

  environment {
        IMAGE_TAG = "${env.BUILD_NUMBER}"
        
  }

stages{

   stage('SCM Checkout'){
     steps{
 git 'https://github.com/challa12/mydevops.git'
     }
   }
                        
   stage('Unit Testing'){
     steps{
             bat label: '', script: 'mvn clean test'
     }
   }
      stage('Maven packing'){
     steps{
           bat label: '', script: 'mvn clean package'
        }
    }
    
   stage('Input') {
            steps {
                input('Do you want to proceed to dev?')
            }            
            
    }
stage('deploy') {
            steps {
                deploy adapters: [tomcat8(credentialsId: 'b627e3b3-f23c-4d78-b6c9-af16477dabd7', path: '', url: 'http://localhost:80')], contextPath: 'newmav-1.0-SNAPSHOT.war', onFailure: false, war: '"**/*.war"'
            }            
            
    }

    
}
}
